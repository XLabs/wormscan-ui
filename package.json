{
	"name": "wormscan-ui",
	"version": "0.0.2",
	"private": true,
	"source": "src/index.html",
	"scripts": {
		"build": "parcel build --public-url ./",
		"start": "parcel",
		"clean": "rimraf dist && rimraf .parcel-cache",
		"prepare": "husky install",
		"test": "jest"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "2.8.3",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/node": "^18.13.0",
		"@types/react": "^18.0.27",
		"@types/react-dom": "^18.0.10",
		"buffer": "^5.5.0",
		"husky": ">=6",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"lint-staged": ">=10",
		"parcel": "^2.8.3",
		"prettier": "^2.8.3",
		"process": "^0.11.10",
		"rimraf": "^4.1.2",
		"ts-jest": "^29.0.5",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@radix-ui/react-dropdown-menu": "^2.0.2",
		"@radix-ui/react-icons": "^1.1.1",
		"@radix-ui/react-toggle-group": "^1.0.2",
		"@xlabs-libs/wormscan-sdk": "https://github.com/xlabs/wormscan-sdk#lib",
		"apexcharts": "^3.36.3",
		"i18next": "^22.4.9",
		"react": "^18.2.0",
		"react-apexcharts": "^1.4.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^12.1.5",
		"react-query": "^3.39.3",
		"react-router-dom": "^6.7.0",
		"recoil": "^0.7.6"
	},
	"alias": {
		"src": "./src"
	},
	"lint-staged": {
		"*.{svg,ts,tsx,js,jsx,scss,css,md}": "prettier --write"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom/extend-expect"
		],
		"transform": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileTransformer.js"
		},
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/src/$1",
			"\\.(css|scss)$": "identity-obj-proxy"
		}
	}
}
